<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f0f0"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态:"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/tx_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发货"
                android:textColor="#ff537b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号:"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/tx_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456123213"
                android:textColor="#000000" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/im_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气净化器"
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tx_order_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A440" />

                <TextView
                    android:textColor="#999999"
                    android:id="@+id/tx_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="3800 X 1" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tx_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#999999"
            android:text="2010-01-01" />

        <TextView
            android:id="@+id/tx_total"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="共"/>

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"></View>

    <TextView
        android:id="@+id/tx_order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="买家信息:"
        android:textColor="#000000"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:textColor="#999999"
            android:id="@+id/tx_order_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家留言:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_tk"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tx_fh"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_view_border"
            android:padding="6dp"
            android:text="退款"
            android:layout_marginRight="10dp"
            android:textColor="#ff537b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_fh"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_view_border"
            android:padding="6dp"
            android:text="发货"
            android:textColor="#ff537b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tx_wlxx"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_view_border"
            android:padding="6dp"
            android:text="物流信息"
            android:textColor="#ff537b"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>
