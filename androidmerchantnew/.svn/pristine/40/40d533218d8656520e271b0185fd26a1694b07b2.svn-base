<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sh.abmm.com.abmm.activity.Base.BaseActivity">

    <sh.abmm.com.abmm.view.NavigationView
        android:id="@+id/nav_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tx_sp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/text_view_left"
                android:gravity="center"
                android:padding="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text=" 商品 "
                android:textColor="#ff537b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx_yhq"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/text_view_center"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:padding="5dp"
                android:text="优惠券"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tx_ddf"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/text_view_right"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:padding="5dp"
                android:text="到店付"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </sh.abmm.com.abmm.view.NavigationView>


    <LinearLayout
        android:id="@+id/lin_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/lin_quanbu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/order_tx_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/tx_quanbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="#ff537b" />

            <TextView
                android:id="@+id/tx_qb_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/edit_view_border"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="22"
                android:textColor="#ff537b"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_dfh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tx_daifahuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发货"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/dfh_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:focusable="false"
                android:gravity="center|top"
                android:textSize="8dp"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/red"
                android:background="@drawable/edit_view_border_nobackview">
            </TextView>

            <!--<TextView-->
                <!--android:id="@+id/dfh_count"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="15dp"-->
                <!--android:layout_marginLeft="2dp"-->
                <!--android:background="@drawable/edit_view_border"-->
                <!--android:gravity="center"-->
                <!--android:paddingLeft="3dp"-->
                <!--android:paddingRight="3dp"-->
                <!--android:text="2"-->
                <!--android:textColor="#ff537b"-->
                <!--android:textSize="12sp" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_yfh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tx_yifahuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已发货"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_yfh_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/edit_view_border"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="22"
                android:textColor="#ff537b"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_yqjl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:visibility="gone">

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#ff537b"></View>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="验券记录"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_ddfl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:visibility="gone">

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="#ff537b"></View>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="消费记录"
            android:textColor="#000000" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0f0f0"></View>

    <LinearLayout
        android:id="@+id/lin_girl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/girl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="这里空空什么都没有" />
    </LinearLayout>

    <sh.abmm.com.abmm.view.DropDownListView
        android:id="@+id/list_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#f0f0f0"
        android:dividerHeight="0.1dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:listSelector="@android:color/transparent"
        android:smoothScrollbar="true"
        android:visibility="gone" />

    <sh.abmm.com.abmm.view.DropDownListView
        android:id="@+id/list_yhq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#f0f0f0"
        android:dividerHeight="0.1dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:listSelector="@android:color/transparent"
        android:smoothScrollbar="true"
        android:visibility="gone" />

    <sh.abmm.com.abmm.view.DropDownListView
        android:id="@+id/list_ddf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#f0f0f0"
        android:dividerHeight="0.1dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:listSelector="@android:color/transparent"
        android:smoothScrollbar="true"
        android:visibility="gone" />

</LinearLayout>
