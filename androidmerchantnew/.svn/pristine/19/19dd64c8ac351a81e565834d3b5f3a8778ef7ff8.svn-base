<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <sh.abmm.com.abmm.view.NavigationView
            android:id="@+id/nav_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="#ff537b"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="买家信息"
                android:textColor="#000000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="收  货  人: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tx_shr"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tx_shdz"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="手        机: "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tx_sj"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="#ff537b"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="订单信息"
                android:textColor="#000000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:orientation="vertical"

            android:padding="10dp">

            <TextView
                android:id="@+id/tx_ddbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号: "

                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_xdrq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="下单日期: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_spmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="商品名称: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_spxh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="商品型号: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="数        量: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tx_hjje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="结算金额: "
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="#ff537b"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="物流信息"
                android:textColor="#000000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递公司: "
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/lin_kd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tx_kdgs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择快递"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/img_xiala"
                        android:layout_width="13dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/xiala" />
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tx_kd_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递单号: "
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/ed_kd_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tx_kd_id"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="点击输入快递单号"
                    android:maxLines="1"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="确认发货"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</RelativeLayout>
